{
  "name": "auction-backend",
  "version": "1.0.0",
  "description": "Backend API for real-time auction platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "seed": "node seed.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:property": "jest --testPathPattern=property"
  },
  "keywords": [
    "auction",
    "real-time",
    "socket.io",
    "express",
    "mongodb"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "node-cron": "^3.0.3",
    "socket.io": "^4.6.1"
  },
  "devDependencies": {
    "fast-check": "^3.14.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.3",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.property.test.js"
    ],
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ],
    "testTimeout": 30000
  }
}
